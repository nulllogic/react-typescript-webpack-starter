{
  "compilerOptions": {
    "strict": true,
    "include": [
      "./src/**/*"
    ],
    "exclude": [
      "node_modules"
    ],
    "outDir": "./built/",
    "module": "esnext",
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "es5",
      "es2015",
      "es2016"
    ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
  }
}
